local CENTER_CIRCLE_SIZE = 80 
local ITEM_SIZE = 55          
local RAY_LENGTH_UNITS = 108 -- Diperpanjang agar lebih menonjol
local RAY_OFFSET_UNITS = 56 -- Diubah menjadi 0 agar pusat ray ada di pusat wheel


