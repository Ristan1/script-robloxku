        button.TouchTap:Connect(onSelectionClickOuter) -- TouchTap untuk perangkat sentuh
        
        -- Logika Hover (Mouse)
        local isHoveredOuter = false

        button.MouseEnter:Connect(function()
            if not isHoveredOuter then
                isHoveredOuter = true
                selectionSound:Play() -- SUARA SAAT DI-HOVER
                
                local tweenInfo = TweenInfo.new(0.1, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
                TweenService:Create(itemFrame, tweenInfo, {Size = UDim2.new(0, 65, 0, 65)}):Play()
                
                itemFrame.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
                itemStroke.Color = Color3.fromRGB(255, 255, 255)
                itemStroke.Thickness = 3
                centerLabel.Text = scriptInfo.Name 
            end
        end)
        
        button.MouseLeave:Connect(function()
            isHoveredOuter = false
            local tweenInfo = TweenInfo.new(0.1, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
            TweenService:Create(itemFrame, tweenInfo, {Size = UDim2.new(0, 55, 0, 55)}):Play()
            
            itemFrame.BackgroundColor3 = Color3.fromRGB(80, 50, 50)
            itemStroke.Color = Color3.fromRGB(200, 100, 100)
            itemStroke.Thickness = 2
            centerLabel.Text = DEFAULT_CENTER_TEXT 
        end)
    end
    
    -- FUNGSI KONTROL INTERAKSI MOUSE
    local function setWheelActive(isActive)
        for _, btn in ipairs(mainWheelButtons) do
            btn.Active = isActive
        end
        for _, btn in ipairs(outerWheelButtons) do
            btn.Active = isActive
        end
        centerCircle.Active = isActive
    end

    -- FUNGSI ANIMASI DAN LOGIKA BUKA/TUTUP
    local isWheelOpen = false
    
    local function toggleWheel()
        isWheelOpen = not isWheelOpen
        
        if isWheelOpen then
            -- Buka: Dimmer -> Roda Utama -> Roda Kedua
            setWheelActive(true)
            
            -- 1. Dimmer Background (Muncul Duluan)
            dimmerFrame.Visible = true
            TweenService:Create(dimmerFrame, TweenInfo.new(0.3, Enum.EasingStyle.Linear), {BackgroundTransparency = DIMMER_TRANSPARENCY}):Play()

            -- 2. Roda Utama 
            wheelContainer.Size = UDim2.new(0, 0, 0, 0)
            wheelContainer.Visible = true
            local tweenInfoMain = TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
            TweenService:Create(wheelContainer, tweenInfoMain, {Size = UDim2.new(0, 250, 0, 250)}):Play() 
            
            -- 3. Roda Kedua (Terlambat Muncul)
            if #ScriptsInMore > 0 then
                task.wait(0.15) 
                outerWheelContainer.Size = UDim2.new(0, 0, 0, 0)
                outerWheelContainer.Visible = true 
                local tweenInfoOuter = TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
                TweenService:Create(outerWheelContainer, tweenInfoOuter, {Size = UDim2.new(0, 400, 0, 400)}):Play()
            end
            
        else
            -- Tutup: Roda -> Dimmer
            setWheelActive(false) 
            
            local tweenInfoOut = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
            
            -- 1. Tutup Roda Utama & Kedua
            TweenService:Create(wheelContainer, tweenInfoOut, {Size = UDim2.new(0, 0, 0, 0)}):Play()
            local tweenOuter = TweenService:Create(outerWheelContainer, tweenInfoOut, {Size = UDim2.new(0, 0, 0, 0)})
            tweenOuter:Play()
            
            -- 2. Tutup Dimmer
            task.wait(0.05)
            local tweenDimmer = TweenService:Create(dimmerFrame, tweenInfoOut, {BackgroundTransparency = 1})
            tweenDimmer:Play()
            
            tweenDimmer.Completed:Wait() 
            wheelContainer.Visible = false
            outerWheelContainer.Visible = false
            dimmerFrame.Visible = false 
        end
    end

    centerCircle.Active = false 

    minimizeButton.MouseButton1Click:Connect(toggleWheel)
    
    -- EFEK VISUAL (Rainbow) pada Label Tengah Roda Utama
    local hue = 0
    RunService.Heartbeat:Connect(function(dt)
        hue = (hue + dt * 0.3) % 1
        centerLabel.TextColor3 = Color3.fromHSV(hue, 0.8, 1)
    end)
    
    -- NOTIFIKASI AWAL
    local notif = Instance.new("TextLabel")
    notif.Parent = screenGui
    notif.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    notif.BackgroundTransparency = 0.2
    notif.AnchorPoint = Vector2.new(0.5, 0)
    notif.Position = UDim2.new(0.5, 0, 0, -60)
    notif.Size = UDim2.new(0, 280, 0, 45)
    notif.Font = Enum.Font.SourceSansBold
    notif.Text = "Tombol ðŸ“‚â€œ Tekan untuk membuka script" 
    notif.TextColor3 = Color3.fromRGB(255, 255, 255)
    notif.TextSize = 13
    notif.TextWrapped = true
    
    local notifCorner = Instance.new("UICorner")
    notifCorner.CornerRadius = UDim.new(0, 10)
    notifCorner.Parent = notif
    
    local tweenIn = TweenService:Create(notif, TweenInfo.new(0.5), {Position = UDim2.new(0.5, 0, 0, 20)})
    tweenIn:Play()
    
    task.wait(6)
    local tweenOut = TweenService:Create(notif, TweenInfo.new(0.5), {Position = UDim2.new(0.5, 0, 0, -60)})
    tweenOut:Play()
    tweenOut.Completed:Wait()
    notif:Destroy()
end

--================================================================
-- MULAI SCRIPT
--================================================================
createWeaponWheel()
