local Player = Players.LocalPlayer
local Mouse = Player:GetMouse()

--================================================================
-- KONFIGURASI WARNA
--================================================================
local MAIN_WHEEL_COLOR = Color3.fromRGB(100, 100, 255) 
local OUTER_WHEEL_COLOR = Color3.fromRGB(255, 50, 50) 

--================================================================
-- KONFIGURASI SCRIPT HUB (PEMISAHAN RODA)
--================================================================
local MAX_SCRIPTS_IN_WHEEL = 8 

local AllScripts = {
    -- >> RODA PERTAMA (8 ITEM PERTAMA) <<
    {Name = "AntiLag", Icon = "📈", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/antilag"},
    {Name = "Teleport Tulis", Icon = "📝", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/teleport"},
    {Name = "Teleport Ketuk", Icon = "👆", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/teleport%20ketuk"},
    {Name = "Teleport Dekat", Icon = "🔍", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/Tptool"},
    {Name = "Terbang", Icon = "✈️", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/terbang"},
    {Name = "Invisible & spectate", Icon = "👻", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/Invisible%26Spectate"},
    {Name = "Liat Admin", Icon = "👁️", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/liat%20admin%20dan%20owner"},
    {Name = "Lari Cepat", Icon = "⚡", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/lari%20cepat"},
    
    -- >> RODA KEDUA (ITEM KE-9 DAN SETERUSNYA) <<
    {Name = "Tembus & Cahaya", Icon = "💡", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/Tembus%20tembok%20dan%20lampu"},
    {Name = "Infinite Yeild", Icon = "♾️", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/infiniteyield"},
    {Name = "Detector Player", Icon = "🚨", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/detector%20player"},
    {Name = "Copy Id", Icon = "📋", URL = "https://raw.githubusercontent.com/Ristan1/script-robloxku/refs/heads/main/Copy%20Id"},
    {Name = "Private Server", Icon = "🔒", URL = "https://pastefy.app/FE6yAQW4/raw"},
}

local ScriptsInWheel = {}
local ScriptsInMore = {}

for i, scriptInfo in ipairs(AllScripts) do
    if i <= MAX_SCRIPTS_IN_WHEEL then
        table.insert(ScriptsInWheel, scriptInfo)
    else
        table.insert(ScriptsInMore, scriptInfo)
    end
end

--================================================================
-- FUNGSI LOAD SCRIPT
--================================================================
local function loadScriptFromURL(url, scriptName)
    if not pcall(function() return loadstring("") end) then
        warn("loadstring() tidak aktif.")
        return false
    end
    
    local response
    local success = pcall(function() 
        if game.HttpGet then
            response = game:HttpGet(url, true) 
        elseif http_get then
            response = http_get(url) 
        else
            warn("Fungsi HttpGet tidak ditemukan.")
            return nil
        end
    end)
    
    if not success or not response or type(response) ~= "string" or string.len(response) == 0 then
        warn("Gagal mengambil script dari URL atau respons kosong/gagal untuk:", scriptName)
        return false
    end
    
    local scriptFunction, compileError = loadstring(response, scriptName)
    if not scriptFunction then
        warn("Error kompilasi script:", scriptName, "\nError:", compileError)
        return false
    end
    
    local runSuccess, runError = pcall(scriptFunction)
    if not runSuccess then
        warn("Error menjalankan script:", scriptName, "\nError:", runError)
        return false
    end
    
    print(scriptName .. " berhasil dimuat!")
    return true
end

--================================================================
-- FUNGSI MEMBUAT WEAPON WHEEL MOBILE
--================================================================
local function createWeaponWheel()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "WeaponWheelGUI"
    screenGui.Parent = Player:WaitForChild("PlayerGui")
    screenGui.ResetOnSpawn = false
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    local mainWheelButtons = {}
    local outerWheelButtons = {}

    -- TOMBOL MINIMIZE BULAT ðŸ“œ
    local minimizeButton = Instance.new("TextButton")
    minimizeButton.Name = "MinimizeButton"
    minimizeButton.Parent = screenGui
    minimizeButton.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
    minimizeButton.AnchorPoint = Vector2.new(0, 0)
    minimizeButton.Position = UDim2.new(0, 20, 0, 100)
    minimizeButton.Size = UDim2.new(0, 50, 0, 50)
    minimizeButton.Font = Enum.Font.SourceSansBold
    minimizeButton.Text = "📝" -- Diperbaiki ikon, menggunakan emoji untuk kepastian visual
    minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    minimizeButton.TextSize = 25
    minimizeButton.AutoButtonColor = false
    minimizeButton.Active = true
    minimizeButton.Draggable = true 
    
    local minimizeCorner = Instance.new("UICorner")
    minimizeCorner.CornerRadius = UDim.new(1, 0)
    minimizeCorner.Parent = minimizeButton
    
    local minimizeStroke = Instance.new("UIStroke")
    minimizeStroke.Parent = minimizeButton
    minimizeStroke.Color = Color3.fromRGB(255, 255, 255)
    minimizeStroke.Thickness = 2
    minimizeStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

    -- CONTAINER WEAPON WHEEL (RODA UTAMA)
    local wheelContainer = Instance.new("Frame")
    wheelContainer.Name = "WheelContainer"
    wheelContainer.Parent = screenGui
    wheelContainer.BackgroundTransparency = 1 
    wheelContainer.AnchorPoint = Vector2.new(0.5, 0.5)
    wheelContainer.Position = UDim2.new(0.5, 0, 0.5, 0)
    wheelContainer.Size = UDim2.new(0, 250, 0, 250) 
    wheelContainer.Visible = false
    wheelContainer.ZIndex = 2 
    
    -- *** RODA UTAMA: Outer Circle (Lingkaran Abu-abu Dalam) ***
    local outerCircle = Instance.new("Frame")
    outerCircle.Name = "OuterCircle"
    outerCircle.Parent = wheelContainer
    outerCircle.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    outerCircle.BackgroundTransparency = 0.3
    outerCircle.AnchorPoint = Vector2.new(0.5, 0.5)
    outerCircle.Position = UDim2.new(0.5, 0, 0.5, 0)
    outerCircle.Size = UDim2.new(1, 0, 1, 0)
    outerCircle.ZIndex = 1
    
    local outerCorner = Instance.new("UICorner")
    outerCorner.CornerRadius = UDim.new(1, 0)
    outerCorner.Parent = outerCircle
    
    local outerStroke = Instance.new("UIStroke")
    outerStroke.Parent = outerCircle
    outerStroke.Color = MAIN_WHEEL_COLOR 
    outerStroke.Thickness = 3
    
    -- RODA UTAMA: Center Circle
    local centerCircle = Instance.new("TextButton")
    centerCircle.Name = "CenterCircle"
    centerCircle.Parent = wheelContainer
    centerCircle.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    centerCircle.BackgroundTransparency = 0.2
    centerCircle.AnchorPoint = Vector2.new(0.5, 0.5)
    centerCircle.Position = UDim2.new(0.5, 0, 0.5, 0)
    centerCircle.Size = UDim2.new(0, 80, 0, 80)
    centerCircle.ZIndex = 3 
    centerCircle.AutoButtonColor = true

    local centerCorner = Instance.new("UICorner")
    centerCorner.CornerRadius = UDim.new(1, 0)
    centerCorner.Parent = centerCircle
    
    local centerLabel = Instance.new("TextLabel")
    centerLabel.Parent = centerCircle
    centerLabel.BackgroundTransparency = 1
    centerLabel.Size = UDim2.new(1, 0, 1, 0)
    centerLabel.Font = Enum.Font.SourceSansBold
    
    if #ScriptsInMore > 0 then
        -- Teks di pusat diubah untuk mencerminkan Roda Kedua otomatis muncul
        centerLabel.Text = "PILIH\nSCRIPT" 
        centerLabel.TextSize = 12
    else
        centerLabel.Text = "PILIH\nSCRIPT"
        centerLabel.TextSize = 12
    end
    
    centerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    centerLabel.TextWrapped = true
    centerLabel.ZIndex = 4
    
    -- CONTAINER UNTUK RODA KEDUA (MENU LAINNYA)
    local outerWheelContainer = Instance.new("Frame")
    outerWheelContainer.Name = "OuterWheelContainer"
    outerWheelContainer.Parent = screenGui 
    outerWheelContainer.BackgroundTransparency = 1
    -- Posisi diselaraskan dengan wheelContainer
    outerWheelContainer.AnchorPoint = Vector2.new(0.5, 0.5)
    outerWheelContainer.Position = UDim2.new(0.5, 0, 0.5, 0)
    outerWheelContainer.Size = UDim2.new(0, 400, 0, 400) 
    outerWheelContainer.Visible = false
    outerWheelContainer.ZIndex = 1 
    
    -- *** MODIFIKASI PENTING: Tombol Kembali Roda Kedua DIHAPUS ***
    -- Kode untuk 'backButton' DIHAPUS.
    
    -- Buat item script di roda utama (Counter-Clockwise, dimulai dari 12)
    local numScripts = #ScriptsInWheel
    local angleStep = (2 * math.pi) / numScripts
    local radius = 90 
    
    for i, scriptInfo in ipairs(ScriptsInWheel) do
        local angle = (i - 1) * angleStep - (math.pi / 2) 
        local x = math.cos(angle) * radius
        local y = math.sin(angle) * radius
        
        local itemFrame = Instance.new("Frame")
        itemFrame.Name = "Item_" .. i
        itemFrame.Parent = wheelContainer
        itemFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        itemFrame.BackgroundTransparency = 0.2
        itemFrame.AnchorPoint = Vector2.new(0.5, 0.5)
        itemFrame.Position = UDim2.new(0.5, x, 0.5, y)
        itemFrame.Size = UDim2.new(0, 55, 0, 55)
        itemFrame.ZIndex = 2
        
        local itemCorner = Instance.new("UICorner")
        itemCorner.CornerRadius = UDim.new(1, 0)
        itemCorner.Parent = itemFrame
        
        local itemStroke = Instance.new("UIStroke")
        itemStroke.Parent = itemFrame
        itemStroke.Color = Color3.fromRGB(150, 150, 150)
        itemStroke.Thickness = 2
        
        local iconLabel = Instance.new("TextLabel")
        iconLabel.Parent = itemFrame
        iconLabel.BackgroundTransparency = 1
        iconLabel.Size = UDim2.new(1, 0, 0.5, 0)
        iconLabel.Position = UDim2.new(0, 0, 0, 3)
        iconLabel.Font = Enum.Font.SourceSansBold
        iconLabel.Text = scriptInfo.Icon
        iconLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        iconLabel.TextSize = 20
        iconLabel.ZIndex = 3
        
        local nameLabel = Instance.new("TextLabel")
        nameLabel.Parent = itemFrame
        nameLabel.BackgroundTransparency = 1
        nameLabel.Size = UDim2.new(1, -4, 0.5, 0)
        nameLabel.Position = UDim2.new(0, 2, 0.5, 0)
        nameLabel.Font = Enum.Font.SourceSans
        nameLabel.Text = scriptInfo.Name
        nameLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
        nameLabel.TextSize = 8
        nameLabel.TextScaled = true
        nameLabel.TextWrapped = true
        nameLabel.ZIndex = 3
        
        local button = Instance.new("TextButton")
        button.Parent = itemFrame
        button.BackgroundTransparency = 1
        button.Size = UDim2.new(1, 0, 1, 0)
        button.Text = ""
        button.ZIndex = 4
        
        table.insert(mainWheelButtons, button)
        
        button.MouseButton1Click:Connect(function()
            centerLabel.Text = "Loading..."
            if loadScriptFromURL(scriptInfo.URL, scriptInfo.Name) then
                centerLabel.Text = "✅ Loaded"
                itemFrame.BackgroundColor3 = Color3.fromRGB(80, 250, 123)
                itemStroke.Color = Color3.fromRGB(80, 250, 123)
            else
                centerLabel.Text = "❌ Error"
                itemFrame.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
                itemStroke.Color = Color3.fromRGB(255, 85, 85)
            end
            task.wait(1.5)
            wheelContainer.Visible = false
            outerWheelContainer.Visible = false -- Tutup juga roda kedua
            isWheelOpen = false
            centerLabel.Text = "PILIH\nSCRIPT"
            itemFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            itemStroke.Color = Color3.fromRGB(150, 150, 150)
        end)
        
        button.MouseEnter:Connect(function()
            if not UserInputService.TouchEnabled then 
                itemFrame.BackgroundColor3 = Color3.fromRGB(100, 100, 255)
                itemFrame.Size = UDim2.new(0, 65, 0, 65)
                itemStroke.Color = Color3.fromRGB(255, 255, 255)
                itemStroke.Thickness = 3
                centerLabel.Text = scriptInfo.Name
            end
        end)
        
        button.MouseLeave:Connect(function()
            if not UserInputService.TouchEnabled then 
                itemFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
                itemFrame.Size = UDim2.new(0, 55, 0, 55)
                itemStroke.Color = Color3.fromRGB(150, 150, 150)
                itemStroke.Thickness = 2
                centerLabel.Text = "PILIH\nSCRIPT"
            end
        end)
    end
    
    -- Buat item script di roda kedua (MENU LAINNYA) - ZIGZAG CLOCKWISE
    local numMoreScripts = #ScriptsInMore
    local outerRadius = 170 
    
    local zigzagSlotIndices = {0, 1, 11, 2, 10, 3, 9, 4, 8, 5, 7, 6}
    local numSlots = #zigzagSlotIndices
    local anglePerSlot = (2 * math.pi) / 12 

    local angles = {}
    
    for i = 1, numMoreScripts do
        local angle
        
        if i <= numSlots then
            local slotIndex = zigzagSlotIndices[i]
            angle = (-math.pi / 2) + (slotIndex * anglePerSlot)
        else
            local totalAngleStep = (2 * math.pi) / numMoreScripts
            angle = -math.pi/2 - ((i - 1) * totalAngleStep)
        end
        
        table.insert(angles, angle)
    end
    
    -- Terapkan posisi ke item script
    for i, scriptInfo in ipairs(ScriptsInMore) do
        local angle = angles[i]
        local x = math.cos(angle) * outerRadius
        local y = math.sin(angle) * outerRadius
        
        local itemFrame = Instance.new("Frame")
        itemFrame.Name = "OuterItem_" .. i
        itemFrame.Parent = outerWheelContainer
        itemFrame.BackgroundColor3 = Color3.fromRGB(80, 50, 50)
        itemFrame.BackgroundTransparency = 0.2
        itemFrame.AnchorPoint = Vector2.new(0.5, 0.5)
        itemFrame.Position = UDim2.new(0.5, x, 0.5, y)
        itemFrame.Size = UDim2.new(0, 55, 0, 55)
        itemFrame.ZIndex = 7 
        
        local itemCorner = Instance.new("UICorner")
        itemCorner.CornerRadius = UDim.new(1, 0)
        itemCorner.Parent = itemFrame
        
        local itemStroke = Instance.new("UIStroke")
        itemStroke.Parent = itemFrame
        itemStroke.Color = Color3.fromRGB(200, 100, 100)
        itemStroke.Thickness = 2
        
        local iconLabel = Instance.new("TextLabel")
        iconLabel.Parent = itemFrame
        iconLabel.BackgroundTransparency = 1
        iconLabel.Size = UDim2.new(1, 0, 0.5, 0)
        iconLabel.Position = UDim2.new(0, 0, 0, 3)
        iconLabel.Font = Enum.Font.SourceSansBold
        iconLabel.Text = scriptInfo.Icon
        iconLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        iconLabel.TextSize = 20
        iconLabel.ZIndex = 8
        
        local nameLabel = Instance.new("TextLabel")
        nameLabel.Parent = itemFrame
        nameLabel.BackgroundTransparency = 1
        nameLabel.Size = UDim2.new(1, -4, 0.5, 0)
        nameLabel.Position = UDim2.new(0, 2, 0.5, 0)
        nameLabel.Font = Enum.Font.SourceSans
        nameLabel.Text = scriptInfo.Name
        nameLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
        nameLabel.TextSize = 8
        nameLabel.TextScaled = true
        nameLabel.TextWrapped = true
        nameLabel.ZIndex = 8
        
        local button = Instance.new("TextButton")
        button.Parent = itemFrame
        button.BackgroundTransparency = 1
        button.Size = UDim2.new(1, 0, 1, 0)
        button.Text = ""
        button.ZIndex = 9
        
        table.insert(outerWheelButtons, button)

        button.MouseButton1Click:Connect(function()
            centerLabel.Text = "Loading..." -- Menggunakan centerLabel roda utama
            if loadScriptFromURL(scriptInfo.URL, scriptInfo.Name) then
                centerLabel.Text = "✅ Loaded"
                itemFrame.BackgroundColor3 = Color3.fromRGB(80, 250, 123)
                itemStroke.Color = Color3.fromRGB(80, 250, 123)
            else
                centerLabel.Text = "❌ Error"
                itemFrame.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
                itemStroke.Color = Color3.fromRGB(255, 85, 85)
            end
            task.wait(1.5)
            outerWheelContainer.Visible = false
            wheelContainer.Visible = false 
            isWheelOpen = false
            centerLabel.Text = "PILIH\nSCRIPT"
            itemFrame.BackgroundColor3 = Color3.fromRGB(80, 50, 50)
            itemStroke.Color = Color3.fromRGB(200, 100, 100)
            setMainWheelActive(true)
            setOuterWheelActive(true)
        end)
        
        button.MouseEnter:Connect(function()
            if not UserInputService.TouchEnabled then 
                itemFrame.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
                itemFrame.Size = UDim2.new(0, 65, 0, 65)
                itemStroke.Color = Color3.fromRGB(255, 255, 255)
                itemStroke.Thickness = 3
                centerLabel.Text = scriptInfo.Name -- Menggunakan centerLabel roda utama
            end
        end)
        
        button.MouseLeave:Connect(function()
            if not UserInputService.TouchEnabled then 
                itemFrame.BackgroundColor3 = Color3.fromRGB(80, 50, 50)
                itemFrame.Size = UDim2.new(0, 55, 0, 55)
                itemStroke.Color = Color3.fromRGB(200, 100, 100)
                itemStroke.Thickness = 2
                centerLabel.Text = "PILIH\nSCRIPT" -- Menggunakan centerLabel roda utama
            end
        end)
    end
    
    -- FUNGSI KONTROL INTERAKSI MOUSE PADA RODA UTAMA
    local function setMainWheelActive(isActive)
        for _, btn in ipairs(mainWheelButtons) do
            btn.Active = isActive
        end
        centerCircle.Active = isActive
    end
    
    -- FUNGSI KONTROL INTERAKSI MOUSE PADA RODA KEDUA
    local function setOuterWheelActive(isActive)
        for _, btn in ipairs(outerWheelButtons) do
            btn.Active = isActive
        end
    end

    -- FUNGSI ANIMASI DAN LOGIKA BUKA/TUTUP
    local isWheelOpen = false
    
    local function toggleWheel()
        isWheelOpen = not isWheelOpen
        
        if isWheelOpen then
            -- Roda Utama (Muncul Pertama)
            wheelContainer.Size = UDim2.new(0, 0, 0, 0)
            wheelContainer.Visible = true
            local tweenInfoMain = TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
            TweenService:Create(wheelContainer, tweenInfoMain, {Size = UDim2.new(0, 250, 0, 250)}):Play() 
            setMainWheelActive(true)
            
            -- Roda Kedua (Terlambat Muncul)
            if #ScriptsInMore > 0 then
                task.wait(0.15) -- Jeda untuk efek keren
                outerWheelContainer.Size = UDim2.new(0, 0, 0, 0)
                outerWheelContainer.Visible = true 
                local tweenInfoOuter = TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
                TweenService:Create(outerWheelContainer, tweenInfoOuter, {Size = UDim2.new(0, 400, 0, 400)}):Play()
                setOuterWheelActive(true)
            end
            
        else
            -- Roda Utama dan Kedua (Menghilang Bersamaan)
            setMainWheelActive(false) 
            setOuterWheelActive(false)
            
            local tweenInfoOut = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
            
            -- Tutup Roda Utama
            TweenService:Create(wheelContainer, tweenInfoOut, {Size = UDim2.new(0, 0, 0, 0)}):Play()
            
            -- Tutup Roda Kedua
            local tweenOuter = TweenService:Create(outerWheelContainer, tweenInfoOut, {Size = UDim2.new(0, 0, 0, 0)})
            tweenOuter:Play()
            
            tweenOuter.Completed:Wait() -- Tunggu sampai animasi tutup selesai
            wheelContainer.Visible = false
            outerWheelContainer.Visible = false
        end
    end

    -- Tombol tengah roda utama (CenterCircle) tidak lagi membuka roda kedua, roda kedua akan muncul otomatis
    if #ScriptsInMore > 0 then
        centerCircle.Active = false -- Nonaktifkan interaksi di CenterCircle jika ada roda kedua
    end

    minimizeButton.MouseButton1Click:Connect(toggleWheel)
    
    -- EFEK VISUAL (Rainbow) pada Label Tengah Roda Utama
    local hue = 0
    RunService.Heartbeat:Connect(function(dt)
        hue = (hue + dt * 0.3) % 1
        centerLabel.TextColor3 = Color3.fromHSV(hue, 0.8, 1)
    end)
    
    -- NOTIFIKASI AWAL
    local notif = Instance.new("TextLabel")
    notif.Parent = screenGui
    notif.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    notif.BackgroundTransparency = 0.2
    notif.AnchorPoint = Vector2.new(0.5, 0)
    notif.Position = UDim2.new(0.5, 0, 0, -60)
    notif.Size = UDim2.new(0, 280, 0, 45)
    notif.Font = Enum.Font.SourceSansBold
    notif.Text = "Tombol 📝 dapat di-drag. Tekan untuk membuka wheel." -- Ikon tombol juga diperbaiki
    notif.TextColor3 = Color3.fromRGB(255, 255, 255)
    notif.TextSize = 13
    notif.TextWrapped = true
    
    local notifCorner = Instance.new("UICorner")
    notifCorner.CornerRadius = UDim.new(0, 10)
    notifCorner.Parent = notif
    
    local tweenIn = TweenService:Create(notif, TweenInfo.new(0.5), {Position = UDim2.new(0.5, 0, 0, 20)})
    tweenIn:Play()
    
    task.wait(4)
    local tweenOut = TweenService:Create(notif, TweenInfo.new(0.5), {Position = UDim2.new(0.5, 0, 0, -60)})
    tweenOut:Play()
    tweenOut.Completed:Wait()
    notif:Destroy()
end

--================================================================
-- MULAI SCRIPT
--================================================================
createWeaponWheel()
