-- *********************************************************************************************
-- FUNGSI PEMBANTU SUARA (DIPERBAIKI UNTUK MENGHINDARI ERROR INDEX BOOLEAN)
-- *********************************************************************************************

local function PlaySound(assetId, volume)
    -- Lakukan pemeriksaan dasar untuk ID aset yang valid
    if not SoundService or not assetId or not assetId:match("rbxassetid://") then return end
    
    -- Buat objek Sound
    local sound = Instance.new("Sound")
    sound.SoundId = assetId
    sound.Volume = volume or 0.5 
    sound.Parent = SoundService -- Parent ke SoundService
    
    -- Gunakan event 'Ended' untuk menghapus sound setelah selesai
    local connection
    connection = sound.Ended:Connect(function()
        sound:Destroy()
        -- Putuskan koneksi agar fungsi tidak mencoba memutuskan koneksi yang sudah terputus
        if connection then
            connection:Disconnect()
        end
    end)
    
    -- Fallback untuk menghapus sound jika gagal dimuat/dimainkan
    task.spawn(function()
        task.wait(5)
        if sound.Parent and not sound.IsPlaying then
            sound:Destroy()
        end
    end)
    
    sound:Play()
end

